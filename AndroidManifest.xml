<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ipcplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:name=".application.IPCApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ipcplayer.activity.SplashActivity"
            android:label="@string/title_activity_main" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.ipcplayer.module.SampleActivity"
            ></activity>
        
        <activity 
            android:name=".activity.MainActivity"
            ></activity>
        
        <activity 
            android:name=".activity.HelpActivity"
            ></activity>
        
        <activity 
            android:name=".activity.AllSongListActivity"
            
            ></activity>
        
        <activity 
            android:name=".activity.PlayingActivity"
            ></activity>
        
        <activity 
            android:name="com.tencent.weibo.ui.AuthTencentActivity"
            ></activity>
        
        <activity 
            android:name="com.tencent.weibo.ui.ShareTencentActivity"
            ></activity>
        
        <activity 
            android:name="com.weibo.net.AuthWeiboActivity"
            ></activity>
        
        <activity 
            android:name="com.weibo.net.ShareWeiboActivity"
            ></activity>
        
        <service android:name=".service.PlaybackService" android:process=":remote">
            <intent-filter>
                <action android:name="com.example.ipcplayer.service.IPlayback"></action>
            </intent-filter>
        </service>
          
        <provider android:name=".provider.MusicDBProvider" android:authorities="com.music"
                  android:multiprocess="false"
            ></provider>
       
        
    </application>
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>"
    
</manifest>