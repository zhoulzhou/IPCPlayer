<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ipcplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:name=".application.IPCApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainDbActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name=".service.PlaybackService" android:process=":remote">
            <intent-filter>
                <action android:name="com.example.ipcplayer.service.IPlayback"></action>
            </intent-filter>
        </service>
        
        <provider android:name=".provider.MusicDBProvider" android:authorities="com.music"
                  android:multiprocess="false"
            ></provider>
        
    </application>

</manifest>